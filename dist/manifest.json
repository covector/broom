{
    "name": "broom",
    "description": "A Chrome extension for managing tab groups",
    "version": "1.2",
    "manifest_version": 3,
    "icons": {
        "16": "img/broom_icon_16.png",
        "32": "img/broom_icon_32.png",
        "48": "img/broom_icon_48.png",
        "128": "img/broom_icon_128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "img/broom_icon_16.png",
            "32": "img/broom_icon_32.png",
            "48": "img/broom_icon_48.png",
            "128": "img/broom_icon_128.png"
        }
    },
    "commands": {
        "_execute_action": {
        "suggested_key": {
            "default": "Ctrl+B",
            "mac": "Command+B"
        }
        }
    },
    "permissions": [
        "storage",
        "tabGroups",
        "tabs",
        "downloads"
    ],
    "options_page": "options.html"
}